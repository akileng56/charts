<?xml version="1.0" encoding="utf-8"?>
<widget id="com.mendix.widget.custom.LineChart.LineChart" needsEntityContext="true" offlineCapable="true" xmlns="http://www.mendix.com/widget/1.0/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../xsd/widget.xsd">
    <name>Line chart</name>
    <description>Create line chart</description>
    <icon/>
    <properties>
        <property key="seriesConfig" type="object" isList="true" required="false">
            <caption>Series</caption>
            <category>Data source</category>
            <description>Add a serie and configure its properties</description>
            <properties>
                <property key="name" type="string">
                    <caption>Name</caption>
                    <category>Data source</category>
                    <description>Used in the legend</description>
                </property>
                <property key="entity" type="entity" pathType="reference" isPath="optional">
                    <caption>Data entity</caption>
                    <category>Data source</category>
                    <description>The entity containing points to plot</description>
                </property>
                <property key="sourceType" type="enumeration" defaultValue="xpath">
                    <caption>Source</caption>
                    <category>Data source</category>
                    <description>Type of source</description>
                    <enumerationValues>
                        <enumerationValue key="xpath">Database</enumerationValue>
                        <enumerationValue key="microflow">Microflow</enumerationValue>
                    </enumerationValues>
                </property>
                <property key="entityConstraint" type="entityConstraint" entityProperty="entity" required="false">
                    <caption>Source XPath Constraint</caption>
                    <category>Data source</category>
                    <description>Constraint on the data from the data entity</description>
                </property>
                <property key="dataSourceMicroflow" type="microflow" required="false">
                    <caption>Source microflow</caption>
                    <category>Data source</category>
                    <description>Returns a lines' coordinates</description>
                    <returnType type="Object" entityProperty="entity" isList="true"/>
                </property>
                <property key="xAttribute" type="attribute" entityProperty="entity">
                    <caption>X-axis data attribute</caption>
                    <category>Data source</category>
                    <description>Attribute containing x-axis dates</description>
                    <attributeTypes>
                        <attributeType name="DateTime"/>
                        <attributeType name="Decimal"/>
                        <attributeType name="Long"/>
                        <attributeType name="Integer"/>
                        <attributeType name="String"/>
                    </attributeTypes>
                </property>
                <property key="yAttribute" type="attribute" entityProperty="entity">
                    <caption>Y-axis data attribute</caption>
                    <category>Data source</category>
                    <description>Attribute containing y-axis data</description>
                    <attributeTypes>
                        <attributeType name="Decimal"/>
                        <attributeType name="Long"/>
                        <attributeType name="Integer"/>
                    </attributeTypes>
                </property>
                <property key="mode" type="enumeration" defaultValue="linesomarkers">
                    <caption>Mode</caption>
                    <category>Appearance</category>
                    <description></description>
                        <enumerationValues>
                            <enumerationValue key="lines">Lines</enumerationValue>
                            <enumerationValue key="markers">Markers</enumerationValue>
                            <enumerationValue key="linesomarkers">Lines with Markers</enumerationValue>
                        </enumerationValues>
                </property>
                <property key="lineColor" type="string" required="false">
                    <caption>Line color</caption>
                    <category>Appearance</category>
                    <description>Line color</description>
                </property>
            </properties>
        </property>
        <property key="xAxisLabel" type="string" required="false">
            <caption>X-axis label</caption>
            <category>X-axis</category>
            <description>Label for the x-axis (horizontal)</description>
        </property>
        <property key="yAxisLabel" type="string" required="false">
            <caption>Y-axis label</caption>
            <category>Y-axis</category>
            <description>Label for the y-axis (vertical)</description>
        </property>
        <property key="title" type="string" required="false">
            <caption>Chart title</caption>
            <category>Appearance</category>
            <description>Chart title</description>
        </property>
        <property key="showGrid" type="boolean" defaultValue="true">
            <caption>Show grids</caption>
            <category>Appearance</category>
            <description>Chart grids</description>
        </property>
        <property key="showToolBar" type="boolean" defaultValue="true">
            <caption>Show toolbar</caption>
            <category>Appearance</category>
            <description>Chart toolbar</description>
        </property>
        <property key="showLegend" type="boolean" defaultValue="true">
            <caption>Show legend</caption>
            <category>Appearance</category>
            <description>Chart Legend</description>
        </property>
        <property key="responsive" type="boolean" defaultValue="true">
            <caption>Responsive</caption>
            <category>Appearance</category>
            <description/>
        </property>
        <property key="widthUnit" type="enumeration" defaultValue="percentage">
            <caption>Width unit</caption>
            <category>Appearance</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="auto">Auto</enumerationValue>
                <enumerationValue key="percentage">Percentage</enumerationValue>
                <enumerationValue key="pixels">Pixels</enumerationValue>
            </enumerationValues>
        </property>
        <property key="width" type="integer" defaultValue="100">
            <caption>Chart width</caption>
            <category>Appearance</category>
            <description>Width of the chart</description>
        </property>
        <property key="heightUnit" type="enumeration" defaultValue="auto">
            <caption>Height unit</caption>
            <category>Appearance</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="auto">Auto</enumerationValue>
                <enumerationValue key="pixels">Pixels</enumerationValue>
                <enumerationValue key="percentage">Percentage</enumerationValue>
            </enumerationValues>
        </property>
        <property key="height" type="integer" defaultValue="100">
            <caption>Chart height</caption>
            <category>Appearance</category>
            <description>Height of the chart</description>
        </property>
    </properties>
</widget>
